<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Tic Tac Toe</title>
<style>
body { text-align: center; font-family: Arial; background: #333; color: white; }
.grid { display: grid; grid-template-columns: repeat(3, 100px); margin: 20px auto; }
.cell { width: 100px; height: 100px; border: 2px solid white; font-size: 2rem; display: flex; align-items: center; justify-content: center; cursor: pointer; }
</style>
</head>
<body>
<h1>Tic Tac Toe</h1>
<div class="grid" id="grid"></div>
<h2 id="status"></h2>
<script>
const grid = document.getElementById("grid");
let board = ["","","","","","","","",""];
let currentPlayer = "X";
let gameActive = true;

function renderBoard(){
    grid.innerHTML = "";
    board.forEach((cell, i) => {
        const div = document.createElement("div");
        div.classList.add("cell");
        div.innerText = cell;
        div.addEventListener("click", () => makeMove(i));
        grid.appendChild(div);
    });
}

function makeMove(i){
    if(board[i] !== "" || !gameActive) return;
    board[i] = currentPlayer;
    checkWinner();
    currentPlayer = currentPlayer === "X" ? "O" : "X";
    renderBoard();
}

function checkWinner(){
    const winPatterns = [
        [0,1,2],[3,4,5],[6,7,8],
        [0,3,6],[1,4,7],[2,5,8],
        [0,4,8],[2,4,6]
    ];
    winPatterns.forEach(pattern => {
        const [a,b,c] = pattern;
        if(board[a] && board[a] === board[b] && board[a] === board[c]){
            document.getElementById("status").innerText = `${board[a]} Wins!`;
            gameActive = false;
        }
    });
}
renderBoard();
</script>
</body>
</html>
